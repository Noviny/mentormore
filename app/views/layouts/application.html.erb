<!DOCTYPE html>
<html>
<head>
  <title>Mentormore</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="navbar">
  <% if @current_user.present? %>
    <%= link_to @current_user.name, user_path(@current_user.id) %>
    <%= link_to 'Log Out', login_path, :method => :delete  %>
    <% if @current_user.mentee? %>
      <%= link_to 'Ask For Help', new_question_path %>
      <%= link_to 'My Asked Questions', myquestions_path %>
    <% end %>
    <% if @current_user.mentor? %>
      <%= link_to 'Look at Questions', questions_path %>
    <% end %>
    <%= link_to "Notifications: #{@current_user.notifications.length}", notifications_path %>
  <% end %>
</div>

<div id="content">
  <%= yield %>
</div>

</body>
</html>
