<h1>Notifications</h1>

<% if @notifications.any? %>
<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notifications.each do |notification| %>
      <tr>
        <td><%= Question.find(notification.question_id).name %></td>
        <td><%= Answer.find(notification.answer_id).explaining %></td>
        <td><%= link_to 'Dismiss', notification, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <p>No New Notifications</p>
<% end %>

<br>